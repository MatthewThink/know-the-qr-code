/* pages/user/user.wxss */
@import '../../css/iconfont.wxss';

.head_view {
  width: 100%;
  padding: 20rpx 60rpx;
  height: 260rpx;
  background: #37373b;
  display: flex;
  justify-content: space-between;
  color: white;
 
}

.perfect_pic {
  padding: 60rpx 0;
  background: #37373b;
  color: white;
   /* margin-left: 50rpx; */
}

.head_pic image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
}

.perfect_pic image {
  width: 60rpx;
  height: 60rpx;
}

/*选项样式  */

.option_view {
  width: 100%;
  padding: 30rpx 60rpx;
  display: flex;
  justify-content: space-between;
}

.option_list {
  padding: 10rpx 10rpx;
  /* border: 1rpx solid red; */
}

.option_list image {
  width: 100rpx;
  height: 100rpx;
}

/*list  */

.list_view {
  width: 100%;
  padding-left: 60rpx;
  padding-right: 60rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: #f5f5f5;
}

button {
  border: none;
  border-radius: 0;
  font-size: 36rpx;
  text-align: left;
}

button::after {
  content: "";
  border: none;
  border-radius: 0;
}
