page{
 padding-bottom: 120rpx;
}
.iconfont{font-size: inherit;}
.no-card{ padding: 20% 0; text-align: center; font-size: 32rpx;}
.icon-iconmingpian01{ font-size: 120rpx; line-height: 140%;}
.new-card{ margin: 0 20%;}

.card-show{ margin: 30rpx; background: #fff; border-radius: 12rpx; overflow: hidden;}
.card-m{ overflow:hidden; background: #14162e; position: relative; color: #fff;}
.card-bg{ background-size: cover; background-position:center center; background-repeat: no-repeat; position: absolute; width: 100%; height: 100%;  opacity: 0.6; top: 0; left: 0; filter: blur(5px); -webkit-transform: scale(1.2);transform: scale(1.2);}
.card-bg-img{ width: 100%; height: 100%;}
.card-t,.card-info{ padding:40rpx; position: relative; z-index: 1;}
.avarat{ width: 120rpx; height: 120rpx; border-radius: 50%; border: 4rpx solid #fff; overflow: hidden; margin-right: 20rpx;}
.avarat-img{ width: 100%; height: 100%; border-radius: 50%;}
.card-t-info{ display: -webkit-box; -webkit-box-align: center;}
.card-name{ font-size: 36rpx; line-height: 100%;}
.card-job{ opacity: 0.7; margin-top: 12rpx; line-height: 100%;}
.card-info-tit{ width: 80rpx; opacity: 0.7;}
.card-info .flex:not(:first-child){ margin-top: 10rpx;}
.card-info::before{ opacity: 0.2;}
.card-date{ text-align: center;color:#666;font-size: 30rpx;}
/* .card-date .iconfont{ font-size: 46rpx;} */
.card-date-item{ padding: 20rpx 0;}
.card-more{ padding: 30rpx;}
.count{ font-size:36rpx; margin-bottom: 10rpx;}
.card-date .sub:active{ background: rgba(0, 0, 0, 0.05 );}

.to-mycard{width: 60rpx;height: 60rpx;padding: 0;background: transparent;color:inherit;line-height: 60rpx;font-size: 36rpx;text-align: center;border-radius:50%;margin: 0;transition: all 0.2s linear;}
.to-mycard:active{border-radius:0;background: rgba(255, 255, 255, 0.2);}

.btn-box{ padding:30rpx;background-color: #fff;}
.btn-box button{font-size: 34rpx;}
.share-tips { z-index: 9999;display: block;}

.red{color:#FF4B3E;}
.icon-appreciatefill::before,.icon-favorfill{color: inherit;}
.orange{color: #f90;}


.picList{ margin: 30rpx; overflow: hidden;}
.picList image{ margin-right: 30rpx; width: 150rpx; height: 150rpx; float: left;}
.picList image:nth-child(4n){ margin-right: 0;}



.footerBox{
    position: fixed;
    left: 0;
    bottom: 0;
    z-index: 5;
    width: 100%;
    height: 120rpx;
    padding: 20rpx 30rpx;
    background-color: #fff;
    display: flex;
    justify-content: space-around;
}
.footBtn{
    height: 80rpx;
    line-height: 80rpx;
    font-size: 30rpx;
    color: #fff;
}
.footBtn:active{
    opacity: 0.85;
}
.footBtn:not(:last-child){
    margin-right: 30rpx;
}
.footBtn:nth-child(1){
    background-color: #f66;
}
.footBtn:nth-child(2){
    background-color: #fea522;
}